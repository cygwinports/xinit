inherit xorg

SRC_URI+=" startxdmcp.bat startxwin.bat startxwin.sh"
PATCH_URI="1.1.1-HOME-with-spaces.patch"

xinit_CONTENTS="etc/X11/ etc/p* usr/"

MAKEOPTS+=" XINITDIR=/etc/X11/xinit"

src_install() {
	cd ${B}
	cyginstall

	cd ${S}
	dobin startxdmcp.bat startxwin.bat startxwin.sh
	unix2dos ${D}/usr/bin/*.bat
}
